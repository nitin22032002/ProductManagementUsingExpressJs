<style>
    .main{
        display: flex;
        justify-content: center;
        justify-items: center;
    }
    .submain{
        width: 600px;
        margin-top: 30px;
        padding: 20px;
        background: #dfe6e9;
        border-radius: 30px;
    }
    .red{
        color: red;
    }
    .green{
        color: green;
    }
    .pad{
        padding: 20px;
    }
    .size{
        font-size: 20px;
    }
    .signup{
        font-size: 35px;
        padding-bottom: 10px;
      }
</style>
<html>
    <head>
        <title>
            Add Product
        </title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>
    <script src="/javascripts/product.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">    
</head>
<body>
    <div class="main">
        <div class="submain">
            <h2 class='signup'>Add Product</h2>
        <form action="/product/addproduct" method="post" enctype="multipart/form-data" >
                    <div class="row">
                <div class="control has-icons-left">
                    <input class="input is-medium" type="text" name="pname" required pattern="[A-Z a-z . 0-9]+" placeholder="Product Name">
                    <span class="icon is-left">
                        <i class="fab fa-product-hunt"></i>
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col pad size">
                    <div class="select">
                        <select class="is-hovered" required name="ptype" id="ptype">
                          <option>--Select Product Type--</option>
                        </select>
                      </div>
                </div>
                <div class="col pad">
                    <div class="input-group mb-3 input-group input-group-lg">
                        <span class="input-group-text">GST</span>
                        <input readonly="true" type="text" class="form-control" required pattern="[0-9]+" name="gst" id="gst" aria-label="Amount (to the nearest dollar)" placeholder="GST">
                        <span class="input-group-text"><i class="fas fa-percentage"></i></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col pad">
                    <div class="input-group mb-3 input-group input-group-lg">
                        <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
                        <input type="text" class="form-control" name="price" pattern="[0-9]+" required aria-label="Amount (to the nearest dollar)" placeholder="Price">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class="col pad">
                    <div class="input-group mb-3 input-group input-group-lg">
                        <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
                        <input type="text" class="form-control" required name="oprice" pattern="[0-9]+" aria-label="Amount (to the nearest dollar)" placeholder="Offer Price">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="control has-icons-left">
                        <input class="input is-medium" type="number" name="stock" required pattern="[0-9]+" placeholder="Product Stock">
                        <span class="icon is-left">
                            <i class="fab fa-product-hunt"></i>
                        </span>
                    </div>
                </div>
                <div class="col">
                    <div class="file" style="font-size: 20px;">
                        <label class="file-label">
                          <input class="file-input" type="file" required name="productimage">
                          <span class="file-cta">
                            <span class="file-icon">
                              <i class="fas fa-upload"></i>
                            </span>
                            <span class="file-label">
                              Choose a Product Image
                            </span>
                          </span>
                        </label>
                      </div>
                </div>
            </div>
            <div class="row">
                <div class="col pad">
                    <button class="button is-success is-outlined input-group input-group-lg" type="submit">Add Product</button>
                </div>
                <div class="col pad">
                    <button class="button is-success is-outlined input-group input-group-lg" type="reset" name="btn">Reset</button>
                </div>
            </div>
        </form>
        <%if(status==true){
            if(c==true){
                b="green"
            }
            else{
                b="red"
            }
            %>
            
        <div class="row <%=b%>">
           <center> <h1><%=message %></h1></center>
        </div><%}%>
        </div>
    </div>
</body>
</html>