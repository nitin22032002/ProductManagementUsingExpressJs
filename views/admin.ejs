<html>
    <head>
        <title>
            Home Page For Admin
        </title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    </head>
    <body>
        <% if(status==false){%>
            <center>
                <h1>404 ERROR</h1>
                <h1>Data Not Found</h1>
            </center>
        <%}else{%>
            <div class="main">
                <div class="submain">
                    <div class="row">
                        <div class="col">
                            <button><a href="/product/">Home</a></button>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Product Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">GST</th>
                            <th scope="col">Price</th>
                            <th scope="col">Offer Price</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Picture</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% data.map((item,index)=>{%>
                                  <tr>
                                      <th scope="row">
                                          <%=item.productid%>
                                      </th>
                                      <td>
                                          <%=item.productname%>
                                      </td>
                                      <td>
                                          <%=item.ptype%>
                                      </td>
                                      <td>
                                          <%=item.gst%>%
                                      </td>
                                      <td>
                                          <%=item.productprice%>
                                      </td>
                                      <td>
                                          <%=item.productofferprice%>
                                      </td>
                                      <td>
                                          <%=item.productstock%>
                                      </td>

                                      <td>
                                          <a href="/images/<%=item.productimage%>"><img src="/images/<%=item.productimage%>" width="100px" height="50px"></a>
                                      </td>
                                      <td>
                                      <a href="/product/adminadd?id=<%=item.productid%>">Update Data</a><br>
                                      <br><a href="/product/updateimage?id=<%=item.productid%>">Update Image</a>
                                      </td>
                                  </tr>
                              <%})%>
      
                        </tbody>
                      </table>
                </div>
            </div>



       <% }%>
</body>
</html>