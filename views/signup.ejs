<style>
    .main{
        display: flex;
        justify-content: center;
        justify-items: center;
    }
    .submain{
        width: 600px;
        margin-top: 30px;
        padding: 20px;
        background: #b2bec3;
        border-radius: 30px;
    }
    .pad{
        padding: 10px;
    }
    .size{
        font-size: 30px;
    }
    .female{
        color: #e84393;
    }
    .signup{
        font-size: 40px;
        
      }
    .green{
      color:green;
    }
    #passeye{
      display: inline;
      position: relative;
      left: 206px;
      top: -51px;
      font-size: 25px;
    }
    #cpasseye{
      display: inline;
      position: relative;
      left: 206px;
      top: -51px;
      font-size: 25px;
    }
</style>
<html>
    <head>
    <title> Sign Up </title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>
    <script src="/javascripts/fill.js"></script>
    <script src="/javascripts/checks.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">    
</head>
    <body>
        <form action="/authentication/signup/home" id="formsignup" method="post">
        <div class="main">
            <div class="submain">
                <h2 class='signup'>Sign Up</h2>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                              <input required class="input" name="firstname" id="fname" type="text" placeholder="First Name">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                              <span class="icon is-small is-right">
                                <i id="ficon" class="fas fa-check"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                              <input required class="input" id="lname" type="text" name="lastname" placeholder="Last Name">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                              <span class="icon is-small is-right">
                                <i id="licon" class="fas fa-check"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                </div>
                <div class="row pad">
                    <div class="col">
                        <div class="control">
                            <label class="radio pad">
                              <input required type="radio" name="gender" value="male">
                              <span class="icon is-small is-left">
                                <i class="fas fa-male size"></i>
                              </span>
                            </label>
                            <label class="radio pad">
                              <input required type="radio" name="gender" value="female">
                              <span class="icon is-small is-left">
                                <i class="fas fa-female size female"></i>
                              </span>
                            </label>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                              <input required class="input" type="tel" name="mob" id="mob" placeholder="Mobile Number">
                              <span class="icon is-small is-left">
                                <b>+91</b>
                              </span>
                              <span class="icon is-small is-right">
                                <i id="mobicon" class="fas fa-check"></i>
                              </span>
                            </p>
                          </div>
                        </div>
                </div>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                              <input required class="input" id="mail" type="email" name="mail" placeholder="Email Id">
                              <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                              </span>
                              <span class="icon is-small is-right">
                                <i id="mailicon" class="fas fa-check"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                </div>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                              <input required class="input" id="address1" type="text" name="address1" placeholder="Address 1">
                              <span class="icon is-small is-left">
                                <i class="fas fa-home"></i>
                              </span>
                              <span class="icon is-small is-right">
                                <i id="address1icon" class="fas fa-check"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                              <input class="input" id="address2" type="text" name="address2" placeholder="Address 2 (Optional)">
                              <span class="icon is-small is-left">
                                <i class="fas fa-home"></i>
                              </span>
                              <span class="icon is-small is-right">
                                <i id="address2icon" class="fas fa-check"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                </div>
                <div class="row pad">
                  <div class="col">
                      <div class="select is-primary">
                          <select required name="state" id="states">
                            <option>--Select State--</option>
                          </select>
                        </div>
                  </div>
                  <div class="col">
                    <div class="select is-primary">
                      <select required name="city" id="cities">
                        <option>--Select City--</option>
                      </select>
                    </div>
              </div>
              </div>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                              <input required class="input" id="pass" type="password" name="passworduser" placeholder="Password">
                              <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                              </span>
                              <span class="icon is-small is-right">
                                <i id="passicon" class="fas fa-check"></i>
                              </span>
                            </p>
                          </div>
                          <label for="p" id="passeye">&#128065;</label>
                          <span id="p"></span>
                        </div>
                        <div class="col">
                          <div class="field">
                            <p class="control has-icons-left has-icons-right">
                              <input required class="input" id="cpass" type="password" name="cpassworduser" placeholder="Confirm Password">
                              <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                              </span>
                              <span class="icon is-small is-right">
                                <i id="cpassicon" class="fas fa-check"></i>&nbsp;
                              </span>
                            </p>
                          </div>
                          <label for="c" id="cpasseye">&#128065;</label>
                          <span id="c"></span>
                        </div>
                      </div>
                      <div class="row pad">
                        <div class="col">
                        <div class="field">
                            <label class="checkbox">
                                <input required id="robot" type="checkbox" name="checkrobot">
                                I am not a Robot
                              </label>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <label class="checkbox">
                                <input  required id="terms" type="checkbox" name="checkterms">
                                I agree to the <a href="/authentication/terms">terms and conditions</a>
                              </label>
                    </div>
                </div>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <input id="submitbtn" type="button" value="Sign Up" class="btn btn-outline-info">
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <input type="reset" value="Reset" class="btn btn-outline-danger">
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    </body>
</html>