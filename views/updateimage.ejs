<style>
    .main{
        display: flex;
        justify-content: center;
        justify-items: center;
    }
    .pad{
        padding: 20px;
    }
    .submain{
        width: 600px;
        margin-top: 30px;
        padding: 20px;
        background: #dfe6e9;
        border-radius: 30px;
    }
    .signup{
        font-size: 35px;
        padding-bottom: 10px;
      }
</style>
<html>
    <head>
        <title>
       Update Image
        </title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">    
</head>
<body>
    <div class="main">
        <div class="submain">
            <h2 class='signup'>Update Image</h2>
        <form action="/product/uimage" method="post" enctype="multipart/form-data" >
            <div class="row pad">
                    <div class="file" style="font-size: 20px;">
                        <input type="hidden" value="<%=id%>" name="id">
                        <label class="file-label">
                          <input class="file-input" type="file" required name="productimage">
                          <span class="file-cta">
                            <span class="file-icon">
                              <i class="fas fa-upload"></i>
                            </span>
                            <span class="file-label">
                              Choose Product New Image
                            </span>
                          </span>
                        </label>
                      </div>
            </div>
            <div class="row pad">
                <div class="col pad">
                    <button class="button is-success is-outlined input-group input-group-lg" type="submit">Update Image</button>
                </div>
                <div class="col pad">
                    <button class="button is-success is-outlined input-group input-group-lg" type="reset">Reset</button>
                </div>
            </div>
        </form>
        </div>
    </div>
</body>
</html>